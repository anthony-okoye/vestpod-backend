# =====================================================
# Vestpod - Environment Variables
# =====================================================
# Vestpod: Investment Portfolio Tracker Application
# Copy this file to .env and fill in your actual values

# =====================================================
# SUPABASE CONFIGURATION
# =====================================================
SUPABASE_URL=https://your-project-id.supabase.co

# Modern API Keys (Recommended - use these)
SUPABASE_PUBLISHABLE_KEY=sb_publishable_your-key-here
SUPABASE_SECRET_KEY=sb_secret_your-key-here

# Legacy API Keys (Not recommended - only if you can't use modern keys)
# SUPABASE_ANON_KEY=your-anon-key-here
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =====================================================
# OAUTH PROVIDERS
# =====================================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

APPLE_CLIENT_ID=your-apple-client-id
APPLE_CLIENT_SECRET=your-apple-client-secret

# =====================================================
# APPLICATION SETTINGS
# =====================================================
SITE_URL=http://localhost:3000

# =====================================================
# FINANCIAL API KEYS
# =====================================================
# Stock Data - Massive.com (Primary)
MASSIVE_API_KEY=your-massive-api-key

# Stock Data - Alpha Vantage (Fallback)
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key

# Cryptocurrency Data - CoinGecko
COINGECKO_API_KEY=your-coingecko-api-key

# Commodities Data - Metals-API
METALS_API_KEY=your-metals-api-key

# Currency Exchange - ExchangeRate-API
EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key

# =====================================================
# AI INTEGRATION
# =====================================================
# Gemini 3 Pro API
GEMINI_API_KEY=your-gemini-api-key

# =====================================================
# SUBSCRIPTION MANAGEMENT
# =====================================================
# RevenueCat
REVENUECAT_API_KEY=your-revenuecat-api-key
REVENUECAT_WEBHOOK_SECRET=your-revenuecat-webhook-secret

# =====================================================
# PUSH NOTIFICATIONS
# =====================================================
# Firebase Cloud Messaging (for push notifications)
FCM_SERVER_KEY=your-fcm-server-key
FCM_PROJECT_ID=your-fcm-project-id

# =====================================================
# DEVELOPMENT SETTINGS
# =====================================================
NODE_ENV=development
PORT=3000
